<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/shape_corners"
        android:orientation="horizontal"
        android:elevation="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:id="@+id/imageViewPair"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corners_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/discipline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:textAlignment="center"
                android:text="Занятий нет"
                android:padding="24dp"
                android:textColor="#325C8C"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/aud"
                app:layout_constraintStart_toStartOf="@+id/vid"
                app:layout_constraintTop_toBottomOf="@+id/vid" />

    </LinearLayout>

</android.support.v7.widget.CardView>